#!/bin/bash
set -euxo pipefail

brew update

formulas=(
  jq
  wget
  curl
  git
  hub
  zsh
  vim
  tmux
  htop
  eza
  pstree
  redis
  scala sbt
  rbenv
  nodenv
  plenv perl-build
  pyenv
  haskell-stack
  shellcheck
  envchain
  coreutils
  libtool
  gnuplot
  ascii
  pandoc
  dos2unix

  mackerelio/mackerel-agent/mackerel-agent
  mackerelio/mackerel-agent/mkr

  itchyny/tap/bed
  itchyny/tap/fillin
  itchyny/tap/formulate
  itchyny/tap/gojo
  itchyny/tap/gojq
  itchyny/tap/json2yaml
  itchyny/tap/mackerel-plugin-battery
  itchyny/tap/mackerel-plugin-dice
  itchyny/tap/mackerel-plugin-loadavg
  itchyny/tap/mackerel-plugin-uptime
  itchyny/tap/miv
  itchyny/tap/mkrg
  itchyny/tap/mmv
  itchyny/tap/qhs
  itchyny/tap/rexdep
  itchyny/tap/volume

  Songmu/tap/blogsync
)

if ! brew list --cask --versions "adoptopenjdk"; then
  brew install --cask --no-quarantine "adoptopenjdk" # required for scala
fi

for formula in go node; do
  if ! command -v "$formula" &>/dev/null; then
    tools/brew-install "$formula"
  fi
done

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done

if command -v miv &>/dev/null; then
  miv install
fi

if ! command -v rustc &>/dev/null; then
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
fi

eval "$(plenv init -)"
eval "$(pyenv init -)"
eval "$(rbenv init -)"
eval "$(nodenv init -)"

etc=$(brew --prefix)/etc
if [[ -f "$etc/sbtopts" ]]; then
  sed -i.bak "
    s|#-sbt-dir .*|-sbt-dir ~/.cache/sbt|;
    s|#-sbt-boot .*|-sbt-boot ~/.cache/sbtboot|;
    s|#-ivy .*|-ivy ~/.cache/ivy2|" \
    "$etc/sbtopts"
  rm -f "$etc/sbtopts.bak"
fi
