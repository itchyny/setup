#!/bin/bash
set -euxo pipefail

brew update

formulas=( \
  wget \
  curl \
  git \
  hub \
  jq \
  zsh \
  vim \
  tmux \
  htop \
  exa \
  pstree \
  redis \
  go \
  scala sbt \
  rbenv \
  nodenv \
  plenv perl-build \
  pyenv \
  haskell-stack \
  shellcheck \
  envchain \
  sshuttle\
  coreutils \
  libtool \
  gnuplot \
  ascii \
  pandoc \
  \
  mackerelio/mackerel-agent/mackerel-agent \
  mackerelio/mackerel-agent/mkr \
  \
  itchyny/tap/bed \
  itchyny/tap/fillin \
  itchyny/tap/formulate \
  itchyny/tap/gojo \
  itchyny/tap/gojq \
  itchyny/tap/mackerel-plugin-battery \
  itchyny/tap/mackerel-plugin-dice \
  itchyny/tap/mackerel-plugin-uptime \
  itchyny/tap/miv \
  itchyny/tap/mkrg \
  itchyny/tap/mmv \
  itchyny/tap/qhs \
  itchyny/tap/rexdep \
  itchyny/tap/volume \
  \
  Songmu/tap/blogsync \
)

if ! brew list --cask --versions "adoptopenjdk"; then
  brew install --cask --no-quarantine "adoptopenjdk" # required for scala
fi

if ! command -v node >/dev/null 2>&1; then
  tools/brew-install "node"
fi

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done

if command -v miv >/dev/null 2>&1; then
  miv install
fi

if ! command -v rustc >/dev/null 2>&1; then
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
fi

eval "$(plenv init -)"
eval "$(pyenv init -)"
eval "$(rbenv init -)"
eval "$(nodenv init -)"

if [[ -f /usr/local/etc/sbtopts ]]; then
  sed -i.bak "
    s|#-sbt-dir .*|-sbt-dir ~/.cache/sbt|;
    s|#-sbt-boot .*|-sbt-boot ~/.cache/sbtboot|;
    s|#-ivy .*|-ivy ~/.cache/ivy2|" \
    /usr/local/etc/sbtopts
  rm -f /usr/local/etc/sbtopts.bak
fi
