#!/bin/bash
set -euxo pipefail

brew update

formulas=(
  jq
  gh
  git
  hub
  zsh
  vim
  eza
  nkf
  wget
  curl
  less
  tmux
  htop
  ascii
  bison
  rsync
  redis
  pyenv
  rbenv
  awscli
  direnv
  nodenv
  pstree
  rustup
  haskell-stack
  shellcheck
  actionlint
  hadolint
  envchain
  coreutils
  libtool
  gnuplot
  pandoc
  logrotate

  mackerelio/mackerel-agent/mackerel-agent
  mackerelio/mackerel-agent/mkr

  itchyny/tap/bed
  itchyny/tap/fillin
  itchyny/tap/formulate
  itchyny/tap/gojo
  itchyny/tap/gojq
  itchyny/tap/json2yaml
  itchyny/tap/mackerel-plugin-battery
  itchyny/tap/mackerel-plugin-dice
  itchyny/tap/mackerel-plugin-loadavg
  itchyny/tap/mackerel-plugin-uptime
  itchyny/tap/miv
  itchyny/tap/mkrg
  itchyny/tap/mmv
  itchyny/tap/qhs
  itchyny/tap/rexdep
  itchyny/tap/volume

  Songmu/tap/blogsync
)

for formula in go node; do
  if ! command -v "$formula" &>/dev/null; then
    tools/brew-install "$formula"
  fi
done

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done

if command -v miv &>/dev/null; then
  miv install
fi

eval "$(pyenv init -)"
eval "$(rbenv init -)"
eval "$(nodenv init -)"
